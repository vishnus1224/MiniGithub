<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapterRepositoryLanguage"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterRepositoryName"
        android:textStyle="bold"
        android:textSize="@dimen/value_20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/adapterRepositoryLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterRepositoryDesc"
        android:layout_marginTop="@dimen/value_5dp"
        android:layout_below="@id/adapterRepositoryName"
        android:layout_centerHorizontal="true"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>