<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_100dp"
    android:padding="@dimen/value_10dp">

    <View
        android:id="@+id/adapterUserCenterSpace"
        android:layout_centerInParent="true"
        android:background="@android:color/black"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/adapterUserName"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_toLeftOf="@id/adapterUserCenterSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterUserNameHeader"
        android:layout_toLeftOf="@id/adapterUserName"
        android:layout_alignTop="@id/adapterUserName"
        android:text="@string/string_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterUserScore"
        android:singleLine="true"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_alignRight="@id/adapterUserName"
        android:layout_below="@id/adapterUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterUserScoreHeader"
        android:layout_toLeftOf="@id/adapterUserScore"
        android:layout_alignTop="@id/adapterUserScore"
        android:text="@string/string_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/adapterUserAvatar"
        android:layout_toRightOf="@id/adapterUserCenterSpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>