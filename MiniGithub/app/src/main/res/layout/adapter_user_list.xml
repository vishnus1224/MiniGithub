<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_100dp"
    android:padding="@dimen/value_10dp">

    <ImageView
        android:id="@+id/adapterUserAvatar"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/value_100dp"
        android:layout_height="@dimen/value_100dp" />

    <TextView
        android:id="@+id/adapterUserName"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_toLeftOf="@id/adapterUserAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterUserNameHeader"
        android:layout_toLeftOf="@id/adapterUserName"
        android:layout_alignTop="@id/adapterUserName"
        android:singleLine="true"
        android:text="@string/string_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterUserScore"
        android:singleLine="true"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_alignRight="@id/adapterUserName"
        android:layout_below="@id/adapterUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapterUserScoreHeader"
        android:layout_toLeftOf="@id/adapterUserScore"
        android:layout_alignTop="@id/adapterUserScore"
        android:singleLine="true"
        android:text="@string/string_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>